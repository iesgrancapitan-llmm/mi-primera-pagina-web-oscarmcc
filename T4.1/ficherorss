<media:content url="https://imagenes.elpais.com/resizer/N0Wz9IvShbpShFBsXY8Ykf2KHsI=/arc-anglerfish-eu-central-1-prod-prisa/public/Y4BGBNRFNSLHKSZMFUSILDEYNA.jpg" type="image/jpeg" medium="image">
