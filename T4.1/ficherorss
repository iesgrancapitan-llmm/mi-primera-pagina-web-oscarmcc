<media:content url="https://imagenes.elpais.com/resizer/9YFsr5XGXPhPTeB_ENfKWpk9tVA=/arc-anglerfish-eu-central-1-prod-prisa/public/PCGERWB3BNGOVJ2V2TG4S4OLRI.jpg" type="image/jpeg" medium="image">
